{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>ContentMessage</th>
                <td>{{ message.contentMessage }}</td>
            </tr>
            <tr>
                <th>DateMessage</th>
                <td>{{ message.dateMessage ? message.dateMessage|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EmailMessage</th>
                <td>{{ message.emailMessage }}</td>
            </tr>
            <tr>
                <th>SenderMessage</th>
                <td>{{ message.senderMessage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('messages_index') }}">back to list</a>

    <a href="{{ path('messages_edit', {'id': message.id}) }}">edit</a>

    {{ include('messages/_delete_form.html.twig') }}
{% endblock %}
