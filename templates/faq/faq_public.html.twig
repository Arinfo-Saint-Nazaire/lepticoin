{% extends 'base.html.twig' %}

{% block title %}Faq public{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    h1 {
        text-align: center;
    }
</style>

<div class="faqtext">
    <h2>Index F.A.Q.</h2>
    <div id="accordion">
        {% for faq in faqs %}
        <h3>{{ faq.question }}</h3>
        <div>
            <ul>
                <li>{{ faq.answer }}</li>
            </ul>
        </div>
        {% else %}
        <h3>no records found</h3>
        {% endfor %}
    </div>
</div>
{% endblock %}