{% extends 'base.html.twig' %}

{% block title %}Notice index{% endblock %}

{% block body %}
    <h1>Notice index</h1>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Photo 1</th>
                <th>Photo 2</th>
                <th>Photo 3</th>
                <th>Date</th>
                <th>Catégorie Professionnelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notice in notices %}
            <tr>
                <td>{{ notice.id }}</td>
                <td>{{ notice.titleNotice }}</td>
                <td>{{ notice.priceNotice }}</td>
                <td>{{ notice.descriptionNotice | raw}}</td>
                <td>{{ notice.locationNotice | raw}}</td>
                <td><img src="{{ notice.photoOneNotice | raw}}" alt="photoOneNotice"></td>
                <td><img src="{{ notice.photoTwoNotice | raw}}" alt="photoTwoNotice"></td>
                <td><img src="{{ notice.photothreeNotice | raw}}" alt="photothreeNotice"></td>
                <td>{{ notice.dateNotice ? notice.dateNotice|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ notice.categoryProfessionnalNotice ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('notice_show', {'id': notice.id}) }}">Montrer</a>
                    <a href="{{ path('notice_edit', {'id': notice.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notice_new') }}">Créer une nouvelle annonce</a>
{% endblock %}
